@model AmwajGrocery.Models.SiteSetting
@{
    ViewData["Title"] = "إعدادات الموقع";
}

<div class="container" style="padding-top: 40px; max-width: 700px;">
    <div class="admin-form-card">

        <div class="admin-form-header" style="display: flex; justify-content: space-between; align-items: center;">
            <h2><i class="fas fa-cogs"></i> إعدادات الموقع</h2>
            <a href="/Admin/Dashboard" style="color: #777; text-decoration: none;"><i class="fas fa-arrow-left"></i> عودة</a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 10px; margin-bottom: 20px; border: 1px solid #c3e6cb;">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="SaveSettings" asp-controller="Admin" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-grid" style="grid-template-columns: 1fr;">

                <div class="form-group">
                    <label class="form-label">نص الشريط الإعلاني (عربي)</label>
                    <input type="text" name="BannerTextAr" value="@Model.BannerTextAr" required class="form-input" placeholder="اكتب العروض هنا..." />
                    <small style="color: #888;">سيظهر هذا النص في الشريط المتحرك أعلى الموقع.</small>
                </div>

                <div class="form-group">
                    <label class="form-label">Banner Text (English)</label>
                    <input type="text" name="BannerTextEn" value="@Model.BannerTextEn" required class="form-input" style="direction: ltr;" />
                </div>

            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i> حفظ التعديلات
                </button>
            </div>
        </form>
    </div>
</div>