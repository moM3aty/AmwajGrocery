@model IEnumerable<AmwajGrocery.Models.Product>
@{
    ViewData["Title"] = "إدارة المنتجات";
    var defaultImage = "/images/logo-removebg-preview (3).png";

    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    string searchTerm = ViewBag.SearchTerm;
}

<div class="container" style="padding-top: 40px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>إدارة المنتجات</h2>
        <div style="display: flex; gap: 10px;">
            <!-- زر حذف الكل -->
            <form action="/Admin/DeleteAllProducts" method="post" onsubmit="return confirm('تحذير هام: هل أنت متأكد من حذف جميع المنتجات؟ لا يمكن التراجع عن هذا الإجراء.');">
                <button type="submit" class="add-to-cart-btn" style="width: auto; background: #e74c3c;">
                    <i class="fas fa-trash-alt"></i> حذف الكل
                </button>
            </form>

            <a href="/Admin/ProductForm" class="add-to-cart-btn" style="width: auto; text-decoration: none; background: var(--amwaj-green);">
                <i class="fas fa-plus"></i> إضافة منتج جديد
            </a>
        </div>
    </div>

    <!-- شريط البحث -->
    <form method="get" action="/Admin/Products" style="margin-bottom: 20px;">
        <div style="position: relative; max-width: 400px;">
            <input type="text" name="search" value="@searchTerm" placeholder="ابحث باسم المنتج..."
                   style="width: 100%; padding: 10px 40px 10px 15px; border: 1px solid #ddd; border-radius: 25px; outline: none;">
            <button type="submit" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: var(--amwaj-primary);">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <div style="overflow-x: auto; background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        <table class="admin-table" style="width: 100%; border-collapse: collapse; min-width: 600px;">
            <thead>
                <tr>
                    <th style="padding: 15px;">الصورة</th>
                    <th style="padding: 15px;">الاسم (عربي)</th>
                    <th style="padding: 15px;">الفئة</th>
                    <th style="padding: 15px;">السعر</th>
                    <th style="padding: 15px;">المخزون</th>
                    <th style="padding: 15px;">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 10px;">
                            <img src="@GetImageSrc(item.ImageUrl)" style="width: 60px; height: 60px; object-fit: contain; border-radius: 5px; background:#f9f9f9; border:1px solid #eee; padding: 5px;"
                                 onerror="this.src='@defaultImage'">
                        </td>
                        <td style="padding: 10px; font-weight: bold;">@item.NameAr</td>
                        <td style="padding: 10px;">@item.Category?.NameAr</td>
                        <td style="padding: 10px;">@item.Price.ToString("F3")</td>
                        <td style="padding: 10px;">
                            @if (item.InStock)
                            {
                                <span style="color: green; background: #e8f5e9; padding: 5px 10px; border-radius: 15px; font-size: 0.9em;">متوفر</span>
                            }
                            else
                            {
                                <span style="color: red; background: #ffebee; padding: 5px 10px; border-radius: 15px; font-size: 0.9em;">نفذ</span>
                            }
                        </td>
                        <td style="padding: 10px;">
                            <a href="/Admin/ProductForm?id=@item.Id" style="color: var(--amwaj-primary); margin-left: 10px; font-size: 1.2em;"><i class="fas fa-edit"></i></a>
                            <form action="/Admin/DeleteProduct" method="post" style="display:inline;" onsubmit="return confirm('هل أنت متأكد من حذف هذا المنتج؟');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" style="background:none; border:none; color: #e74c3c; cursor:pointer; font-size: 1.2em;"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination (Smart) -->
    @if (totalPages > 1)
    {
        <div style="margin-top: 20px; display: flex; justify-content: center; gap: 5px; flex-wrap: wrap;">
            @if (currentPage > 1)
            {
                <a href="/Admin/Products?page=@(currentPage - 1)&search=@searchTerm" style="padding: 8px 15px; border: 1px solid #ddd; border-radius: 5px; background: white;">&laquo; السابق</a>
            }

            @{
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);

                if (startPage > 1)
                {
                    <a href="/Admin/Products?page=1&search=@searchTerm" style="padding: 8px 15px; border: 1px solid #ddd; border-radius: 5px; background: white;">1</a>
                    if (startPage > 2)
                    {
                        <span style="padding: 8px;">...</span>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <a href="/Admin/Products?page=@i&search=@searchTerm"
                       style="padding: 8px 15px; border: 1px solid #ddd; border-radius: 5px; @(i == currentPage ? "background: var(--amwaj-primary); color: white; border-color: var(--amwaj-primary);" : "background: white;")">
                        @i
                    </a>
                }

                if (endPage < totalPages)
                {
                    if (endPage < totalPages - 1)
                    {
                        <span style="padding: 8px;">...</span>
                    }
                    <a href="/Admin/Products?page=@totalPages&search=@searchTerm" style="padding: 8px 15px; border: 1px solid #ddd; border-radius: 5px; background: white;">@totalPages</a>
                }
            }

            @if (currentPage < totalPages)
            {
                <a href="/Admin/Products?page=@(currentPage + 1)&search=@searchTerm" style="padding: 8px 15px; border: 1px solid #ddd; border-radius: 5px; background: white;">التالي &raquo;</a>
            }
        </div>
    }

    <div style="margin-top: 20px;">
        <a href="/Admin/Dashboard" style="color: var(--amwaj-secondary);">عودة للوحة التحكم</a>
    </div>
</div>

@functions {
    public string GetImageSrc(string url)
    {
        string defaultImg = "/images/logo-removebg-preview (3).png";
        if (string.IsNullOrEmpty(url)) return defaultImg;
        if (url.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return url;
        var cleanUrl = url.TrimStart('/');
        if (!cleanUrl.StartsWith("images/", StringComparison.OrdinalIgnoreCase)) return "/images/" + cleanUrl;
        return "/" + cleanUrl;
    }
}