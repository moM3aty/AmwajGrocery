@model IEnumerable<AmwajGrocery.Models.Category>
@{
    ViewData["Title"] = "إدارة الفئات";
    var defaultImage = "/images/logo-removebg-preview (3).png";
}

<div class="container" style="padding-top: 40px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>إدارة الفئات</h2>
        <a href="/Admin/CategoryForm" class="add-to-cart-btn" style="width: auto; text-decoration: none; background: var(--amwaj-green);">
            <i class="fas fa-plus"></i> إضافة فئة جديدة
        </a>
    </div>

    <div style="overflow-x: auto; background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        <!-- تم إضافة كلاس admin-table لضبط الستايل -->
        <table class="admin-table" style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr>
                    <th style="padding: 15px;">الصورة</th>
                    <th style="padding: 15px;">الاسم (عربي)</th>
                    <th style="padding: 15px;">الاسم (انجليزي)</th>
                    <th style="padding: 15px;">عدد المنتجات</th>
                    <th style="padding: 15px;">إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 10px;">
                            <!-- استخدام دالة GetImageSrc لضمان ظهور الصورة -->
                            <img src="@GetImageSrc(item.ImageUrl)" style="width: 60px; height: 60px; object-fit: contain; border-radius: 5px; background: #f9f9f9; border: 1px solid #eee; padding: 5px;"
                                 onerror="this.src='@defaultImage'">
                        </td>
                        <td style="padding: 10px; font-weight: bold;">@item.NameAr</td>
                        <td style="padding: 10px;">@item.NameEn</td>
                        <td style="padding: 10px;">
                            <span class="order-item-badge" style="background: #e0f2f1; color: var(--amwaj-primary);">
                                @(item.Products?.Count() ?? 0) منتج
                            </span>
                        </td>
                        <td style="padding: 10px;">
                            <a href="/Admin/CategoryForm?id=@item.Id" style="color: var(--amwaj-primary); margin-left: 10px; font-size: 1.2em;"><i class="fas fa-edit"></i></a>
                            <form action="/Admin/DeleteCategory" method="post" style="display:inline;" onsubmit="return confirm('هل أنت متأكد؟ قد يؤثر حذف الفئة على المنتجات المرتبطة.');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" style="background:none; border:none; color: #e74c3c; cursor:pointer; font-size: 1.2em;"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="margin-top: 20px;">
        <a href="/Admin/Dashboard" style="color: var(--amwaj-secondary);">عودة للوحة التحكم</a>
    </div>
</div>

@functions {
    public string GetImageSrc(string url)
    {
        string defaultImg = "/images/logo-removebg-preview (3).png";
        if (string.IsNullOrEmpty(url)) return defaultImg;
        if (url.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return url;
        var cleanUrl = url.TrimStart('/');
        if (!cleanUrl.StartsWith("images/", StringComparison.OrdinalIgnoreCase)) return "/images/" + cleanUrl;
        return "/" + cleanUrl;
    }
}